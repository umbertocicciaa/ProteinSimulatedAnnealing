{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gcc build active file",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-m32", "-msse", "-O0",  // Fixed typo from -00 to -O0
                "-no-pie", 
                "${file}",
                "-o", "${fileDirname}/${fileBasenameNoExtension}.o",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compiles the active file with GCC"
        }
    ]
}