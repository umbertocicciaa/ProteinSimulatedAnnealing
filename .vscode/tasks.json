{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gcc build active file",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-g","${file}","-o","${fileDirname}/${fileBasenameNoExtension}","-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":["$gcc"],
            "detail": "Compila il file attivo con GCC"

        }
    ]
}