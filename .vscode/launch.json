{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "gcc - Build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/${fileBasenameNoExtension}",
            "args": [
                "-seq", "seq_256.ds2", 
                "-to", "20", 
                "-alpha", "1", 
                "-k", "1", 
                "-sd", "3", 
                "-d"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/src/",  // Working directory (same as workspace folder)
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb"  // Adjust path if necessary
        }
    ]
}
