{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "gcc - Build and debug C and assembly",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/${fileBasenameNoExtension}",
            "args": [
                "-seq", "seq_256.ds2", 
                "-to", "20", 
                "-alpha", "1", 
                "-k", "1", 
                "-sd", "3", 
                "-d"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/src/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",  
            "preLaunchTask": "run both build tasks"  
        },
        {
            "name": "gcc - Build and debug only C",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/${fileBasenameNoExtension}",
            "args": [
                "-seq", "seq_256.ds2", 
                "-to", "20", 
                "-alpha", "1", 
                "-k", "1", 
                "-sd", "3", 
                "-d"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/src/",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",  
            "preLaunchTask": "gcc only c"  
        }
    ]
}
